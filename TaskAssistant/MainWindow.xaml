<Window
    x:Class="TaskAssistant.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TaskAssistant"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="1100"
    Height="800"
    AllowsTransparency="True"
    Background="Transparent"
    WindowStartupLocation="CenterScreen"
    WindowState="{Binding WindowState, Mode=TwoWay}"
    WindowStyle="None"
    mc:Ignorable="d">

    <Grid>
        <!--  Grid Background  -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Border Width="220" CornerRadius="25 0 0 25">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Offset="0" Color="#343155" />
                        <GradientStop Offset="1" Color="#3B2E58" />
                    </LinearGradientBrush>
                </Border.Background>
            </Border>

            <Border
                Grid.Column="1"
                CornerRadius="0 25 25 0"
                MouseDown="Border_MouseDown">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Offset="0" Color="#3E3A65" />
                        <GradientStop Offset="1" Color="#473765" />
                    </LinearGradientBrush>
                </Border.Background>
            </Border>
        </Grid>

        <!--  Grid Controls  -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!--  Main Menu  -->
            <StackPanel Width="240">
                <StackPanel
                    Margin="0,20,20,20"
                    HorizontalAlignment="Center"
                    Orientation="Horizontal">
                    <TextBlock
                        FontFamily="Assets/Fonts/#Material Symbols Rounded"
                        FontSize="60"
                        Foreground="#9D85FA"
                        Text="&#xf5d0;" />
                    <TextBlock
                        Margin="10,0,0,0"
                        VerticalAlignment="Center"
                        FontSize="25"
                        FontWeight="Bold"
                        Foreground="#9D85FA"
                        Text="任务管理" />
                </StackPanel>

                <!--  首页按钮  -->
                <Button
                    Command="{Binding SwitchToPageCommand}"
                    CommandParameter="HomeButton"
                    Style="{Binding HomeButtonStyle}">
                    <Grid>
                        <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                            <TextBlock
                                FontFamily="Assets/Fonts/#Material Symbols Rounded"
                                FontSize="20"
                                Foreground="White"
                                Text="&#xe88a;" />
                            <TextBlock Style="{StaticResource buttonText}" Text="首页" />
                        </StackPanel>
                    </Grid>
                </Button>

                <!--  任务管理按钮  -->
                <Button
                    Command="{Binding SwitchToPageCommand}"
                    CommandParameter="TasksManageButton"
                    Style="{Binding TasksManageButtonStyle}">
                    <Grid>
                        <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                            <TextBlock
                                FontFamily="Assets/Fonts/#Material Symbols Rounded"
                                FontSize="20"
                                Foreground="White"
                                Text="&#xe85d;" />
                            <TextBlock Style="{StaticResource buttonText}" Text="任务管理" />
                        </StackPanel>
                    </Grid>
                </Button>

                <!--  脚本管理按钮  -->
                <Button
                    Command="{Binding SwitchToPageCommand}"
                    CommandParameter="ScriptManageButton"
                    Style="{Binding ScriptManageButtonStyle}">
                    <Grid>
                        <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                            <TextBlock
                                FontFamily="Assets/Fonts/#Material Symbols Rounded"
                                FontSize="20"
                                Foreground="White"
                                Text="&#xe86f;" />
                            <TextBlock Style="{StaticResource buttonText}" Text="脚本管理" />
                        </StackPanel>
                    </Grid>
                </Button>

            </StackPanel>

            <!--  Info Panel  -->
            <Grid Grid.Column="2" Margin="0,20,20,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="50" />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <!--  Top Menu  -->
                <StackPanel
                    Grid.Row="0"
                    Margin="20,0,0,0"
                    HorizontalAlignment="Right"
                    Orientation="Horizontal">

                    <Button
                        Height="50"
                        Margin="10,0,0,0"
                        Style="{StaticResource topMenuButton}">
                        <TextBlock
                            FontFamily="Assets/Fonts/#Material Symbols Rounded"
                            FontSize="20"
                            Foreground="White"
                            Text="&#xe887;" />
                    </Button>

                    <!--  最小化按钮  -->
                    <Button
                        Height="50"
                        Margin="10,0,0,0"
                        Command="{Binding MinimizeWindowCommand}"
                        Style="{StaticResource topMenuButton}">
                        <TextBlock
                            FontFamily="Assets/Fonts/#Material Symbols Rounded"
                            FontSize="20"
                            Foreground="White"
                            Text="&#xe15b;" />
                    </Button>

                    <!--  关闭按钮  -->
                    <Button
                        Height="50"
                        Margin="10,0,0,0"
                        Command="{Binding CloseWindowCommand}"
                        Style="{StaticResource topMenuButton}">

                        <TextBlock
                            FontFamily="Assets/Fonts/#Material Symbols Rounded"
                            FontSize="20"
                            Foreground="White"
                            Text="&#xe5cd;" />
                    </Button>

                </StackPanel>

                <Border
                    Grid.Row="1"
                    Margin="20,20,20,30"
                    VerticalAlignment="Stretch"
                    Style="{StaticResource border}">
                    <!--  页面容器  -->
                    <ContentControl Content="{Binding CurrentPage}" />
                </Border>

            </Grid>

        </Grid>

    </Grid>
</Window>
