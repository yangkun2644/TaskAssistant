<Window
    x:Class="TaskAssistant.View.ScriptRunDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="脚本运行"
    Width="800"
    Height="600"
    AllowsTransparency="True"
    Background="Transparent"
    ResizeMode="CanResize"
    ShowInTaskbar="True"
    WindowStartupLocation="CenterOwner"
    WindowStyle="None">
    <Border
        Padding="0"
        BorderThickness="1"
        CornerRadius="14">
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Offset="-0.2" Color="#D489FF" />
                <GradientStop Offset="0.5" Color="#FF4751B7" />
            </LinearGradientBrush>
        </Border.Background>
        <Border.Effect>
            <DropShadowEffect
                BlurRadius="20"
                Direction="270"
                Opacity="0.3"
                ShadowDepth="5"
                Color="Black" />
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="60" />
                <RowDefinition Height="40" />
                <RowDefinition Height="*" />
                <RowDefinition Height="60" />
            </Grid.RowDefinitions>

            <!-- 标题栏 -->
            <Grid Grid.Row="0" Background="Transparent">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                
                <TextBlock
                    x:Name="TitleBlock"
                    Grid.Column="0"
                    Margin="32,0,0,0"
                    VerticalAlignment="Center"
                    FontSize="20"
                    FontWeight="Bold"
                    Foreground="White"
                    Text="脚本运行" />

                <!-- 窗口控制按钮 -->
                <StackPanel
                    Grid.Column="1"
                    Margin="0,0,16,0"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
                    
                    <Button
                        x:Name="MinimizeButton"
                        Width="30"
                        Height="30"
                        Margin="4,0"
                        Background="Transparent"
                        BorderThickness="0"
                        Click="MinimizeButton_Click"
                        Foreground="White"
                        Style="{x:Null}">
                        <TextBlock
                            FontFamily="/Assets/Fonts/#Material Symbols Rounded"
                            FontSize="16"
                            Text="&#xe15b;" />
                    </Button>

                    <Button
                        x:Name="CloseButton"
                        Width="30"
                        Height="30"
                        Margin="4,0"
                        Background="Transparent"
                        BorderThickness="0"
                        Click="CloseButton_Click"
                        Foreground="White"
                        Style="{x:Null}">
                        <TextBlock
                            FontFamily="/Assets/Fonts/#Material Symbols Rounded"
                            FontSize="16"
                            Text="&#xe5cd;" />
                    </Button>
                </StackPanel>
            </Grid>

            <!-- 状态栏 -->
            <Border
                Grid.Row="1"
                Margin="32,0,32,0"
                Background="Transparent">
                <TextBlock
                    x:Name="StatusBlock"
                    VerticalAlignment="Center"
                    FontSize="14"
                    FontWeight="SemiBold"
                    Foreground="#e0e0e0"
                    Text="状态：准备执行" />
            </Border>

            <!-- 输出区域 -->
            <Border
                Grid.Row="2"
                Margin="32,8,32,8"
                BorderThickness="1"
                CornerRadius="8">
                <ScrollViewer
                    HorizontalScrollBarVisibility="Auto"
                    VerticalScrollBarVisibility="Auto">
                    <TextBox
                        x:Name="OutputBox"
                        Padding="16"
                        Background="Transparent"
                        BorderThickness="0"
                        FontFamily="Consolas"
                        FontSize="12"
                        Foreground="White"
                        IsReadOnly="True"
                        Text=""
                        TextWrapping="Wrap"
                        VerticalScrollBarVisibility="Auto" />
                </ScrollViewer>
            </Border>

            <!-- 按钮区域 -->
            <StackPanel
                Grid.Row="3"
                Margin="32,0,32,16"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Orientation="Horizontal">

                <Button
                    x:Name="CancelButton"
                    Height="40"
                    Margin="8,0"
                    Click="CancelButton_Click"
                    Style="{StaticResource sendButton}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock
                            FontFamily="/Assets/Fonts/#Material Symbols Rounded"
                            FontSize="18"
                            Foreground="White"
                            Text="&#xe5cd;" />
                        <TextBlock
                            Margin="8,0,0,0"
                            VerticalAlignment="Center"
                            FontSize="14"
                            FontWeight="SemiBold"
                            Text="取消" />
                    </StackPanel>
                </Button>

                <Button
                    x:Name="OkButton"
                    Height="40"
                    Margin="8,0"
                    Click="OkButton_Click"
                    Style="{StaticResource sendButton}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock
                            FontFamily="/Assets/Fonts/#Material Symbols Rounded"
                            FontSize="18"
                            Foreground="White"
                            Text="&#xe2e6;" />
                        <TextBlock
                            Margin="8,0,0,0"
                            VerticalAlignment="Center"
                            FontSize="14"
                            FontWeight="SemiBold"
                            Text="确定" />
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>
