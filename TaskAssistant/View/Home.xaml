<UserControl
    x:Class="TaskAssistant.View.Home"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TaskAssistant.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <StackPanel>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Border
                Height="130"
                Margin="20,20,20,20"
                VerticalAlignment="Top"
                Style="{StaticResource cardBorder}">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Offset="0" Color="#9D85FA" />
                        <GradientStop Offset="1" Color="#C77AFF" />
                    </LinearGradientBrush>
                </Border.Background>
                <Grid>
                    <!--  标题  -->
                    <TextBlock
                        Margin="15,10,0,0"
                        VerticalAlignment="Top"
                        FontSize="16"
                        FontWeight="SemiBold"
                        Style="{StaticResource textLabel}"
                        Text="统计" />
                    <Grid Margin="15,35,15,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <!--  脚本总数  -->
                        <StackPanel Grid.Column="0" Orientation="Horizontal">
                            <TextBlock
                                Margin="0,0,10,0"
                                VerticalAlignment="Center"
                                FontFamily="/Assets/Fonts/#Material Symbols Rounded"
                                FontSize="30"
                                Foreground="White"
                                Text="&#xe86f;" />
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock
                                    FontSize="14"
                                    FontWeight="Bold"
                                    Style="{StaticResource textLabel}"
                                    Text="{Binding TotalScripts}" />
                                <TextBlock
                                    FontSize="10"
                                    Opacity="0.8"
                                    Style="{StaticResource textLabel}"
                                    Text="脚本总数" />
                            </StackPanel>
                        </StackPanel>
                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <TextBlock
                                Margin="0,0,10,0"
                                VerticalAlignment="Center"
                                FontFamily="/Assets/Fonts/#Material Symbols Rounded"
                                FontSize="30"
                                Foreground="White"
                                Text="&#xe9b9;" />
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock
                                    FontSize="14"
                                    FontWeight="Bold"
                                    Style="{StaticResource textLabel}"
                                    Text="{Binding TotalTasks}" />
                                <TextBlock
                                    FontSize="10"
                                    Opacity="0.7"
                                    Style="{StaticResource textLabel}"
                                    Text="任务总数" />
                            </StackPanel>
                        </StackPanel>
                        <!--  今日执行  -->
                        <StackPanel Grid.Column="2" Orientation="Horizontal">
                            <TextBlock
                                Margin="0,0,10,0"
                                VerticalAlignment="Center"
                                FontFamily="/Assets/Fonts/#Material Symbols Rounded"
                                FontSize="30"
                                Foreground="White"
                                Text="&#xf5d0;" />
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock
                                    FontSize="14"
                                    FontWeight="Bold"
                                    Style="{StaticResource textLabel}"
                                    Text="{Binding TodayExecutions}" />
                                <TextBlock
                                    FontSize="12"
                                    Opacity="0.8"
                                    Style="{StaticResource textLabel}"
                                    Text="今日执行" />
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Border>
            <Border
                Grid.Column="1"
                Height="130"
                Margin="20,20,20,20"
                VerticalAlignment="Top"
                Style="{StaticResource cardBorder}">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Offset="0" Color="#9D85FA" />
                        <GradientStop Offset="1" Color="#C77AFF" />
                    </LinearGradientBrush>
                </Border.Background>
                <Grid>
                    <!--  标题  -->
                    <TextBlock
                        Margin="15,10,0,0"
                        VerticalAlignment="Top"
                        FontSize="16"
                        FontWeight="SemiBold"
                        Style="{StaticResource textLabel}"
                        Text="系统资源" />
                    <!--  第二行：系统资源数据  -->
                    <Grid Margin="15,35,15,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <!--  数据库大小  -->
                        <StackPanel Grid.Column="0" Orientation="Horizontal">
                            <TextBlock
                                Margin="0,0,10,0"
                                VerticalAlignment="Center"
                                FontFamily="/Assets/Fonts/#Material Symbols Rounded"
                                FontSize="30"
                                Foreground="White"
                                Text="&#xf191;" />
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock
                                    FontSize="14"
                                    FontWeight="SemiBold"
                                    Style="{StaticResource textLabel}"
                                    Text="{Binding DatabaseSizeText}" />
                                <TextBlock
                                    FontSize="10"
                                    Opacity="0.7"
                                    Style="{StaticResource textLabel}"
                                    Text="数据库" />
                            </StackPanel>
                        </StackPanel>

                        <!--  专用工作集内存（任务管理器"专用内存集"）  -->
                        <StackPanel
                            Grid.Column="1"
                            HorizontalAlignment="Center"
                            Orientation="Horizontal">
                            <TextBlock
                                Margin="0,0,10,0"
                                VerticalAlignment="Center"
                                FontFamily="/Assets/Fonts/#Material Symbols Rounded"
                                FontSize="30"
                                Foreground="White"
                                Text="&#xe322;" />
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock
                                    FontSize="14"
                                    FontWeight="SemiBold"
                                    Style="{StaticResource textLabel}"
                                    Text="{Binding PrivateWorkingSetText}" />
                                <TextBlock
                                    FontSize="10"
                                    Opacity="0.7"
                                    Style="{StaticResource textLabel}"
                                    Text="专用内存集" />
                            </StackPanel>
                        </StackPanel>

                        <!--  CPU使用率  -->
                        <StackPanel
                            Grid.Column="2"
                            HorizontalAlignment="Right"
                            Orientation="Horizontal">

                            <TextBlock
                                Margin="0,0,10,0"
                                VerticalAlignment="Center"
                                FontFamily="/Assets/Fonts/#Material Symbols Rounded"
                                FontSize="30"
                                Foreground="White"
                                Text="&#xe322;" />
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock
                                    FontSize="14"
                                    FontWeight="SemiBold"
                                    Style="{StaticResource textLabel}"
                                    Text="{Binding CpuUsageText}" />
                                <TextBlock
                                    FontSize="10"
                                    Opacity="0.7"
                                    Style="{StaticResource textLabel}"
                                    Text="CPU" />
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Border>
        </Grid>

        <!--  详细内存监控面板  -->
        <Border
            Height="160"
            Margin="20,0,20,20"
            VerticalAlignment="Top"
            Style="{StaticResource cardBorder}">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Offset="0" Color="#4A90E2" />
                    <GradientStop Offset="1" Color="#50E3C2" />
                </LinearGradientBrush>
            </Border.Background>
            <Grid>
                <!--  标题和操作按钮  -->
                <Grid Margin="15,10,15,0" VerticalAlignment="Top">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <TextBlock
                            FontSize="16"
                            FontWeight="SemiBold"
                            Style="{StaticResource textLabel}"
                            Text="内存监控" />
                    </StackPanel>

                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <Button
                            Margin="0,0,5,0"
                            Command="{Binding ManualMemoryCleanupCommand}"
                            Style="{StaticResource fillButton}"
                            ToolTip="立即清理内存">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock
                                    FontFamily="/Assets/Fonts/#Material Symbols Rounded"
                                    FontSize="14"
                                    Foreground="White"
                                    Text="&#xe8b8;" />
                                <TextBlock
                                    Margin="5,0,0,0"
                                    FontSize="12"
                                    Style="{StaticResource textLabel}"
                                    Text="清理" />
                            </StackPanel>
                        </Button>
                        <Button
                            Command="{Binding ResetPeakMemoryCommand}"
                            Style="{StaticResource fillButton}"
                            ToolTip="重置峰值记录">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock
                                    FontFamily="/Assets/Fonts/#Material Symbols Rounded"
                                    FontSize="14"
                                    Foreground="White"
                                    Text="&#xe863;" />
                                <TextBlock
                                    Margin="5,0,0,0"
                                    FontSize="12"
                                    Style="{StaticResource textLabel}"
                                    Text="重置" />
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>

                <!--  详细内存信息  -->
                <Grid Margin="15,55,15,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!--  托管内存  -->
                    <StackPanel Grid.Column="0">
                        <TextBlock
                            FontSize="12"
                            FontWeight="Bold"
                            Style="{StaticResource textLabel}"
                            Text="托管内存" />
                        <TextBlock
                            FontSize="18"
                            FontWeight="SemiBold"
                            Style="{StaticResource textLabel}"
                            Text="{Binding ManagedMemoryText}" />
                        <TextBlock
                            FontSize="10"
                            Opacity="0.8"
                            Style="{StaticResource textLabel}"
                            Text="可回收" />
                    </StackPanel>

                    <!--  工作集内存  -->
                    <StackPanel Grid.Column="1">
                        <TextBlock
                            FontSize="12"
                            FontWeight="Bold"
                            Style="{StaticResource textLabel}"
                            Text="工作集内存" />
                        <TextBlock
                            FontSize="18"
                            FontWeight="SemiBold"
                            Style="{StaticResource textLabel}"
                            Text="{Binding WorkingSetText}" />
                        <TextBlock
                            FontSize="10"
                            Opacity="0.8"
                            Style="{StaticResource textLabel}"
                            Text="系统分配" />
                    </StackPanel>

                    <!--  内存峰值  -->
                    <StackPanel Grid.Column="2">
                        <TextBlock
                            FontSize="12"
                            FontWeight="Bold"
                            Style="{StaticResource textLabel}"
                            Text="历史峰值" />
                        <TextBlock
                            FontSize="18"
                            FontWeight="SemiBold"
                            Style="{StaticResource textLabel}"
                            Text="{Binding PeakMemoryMB, StringFormat='{}{0:F1} MB'}" />
                        <TextBlock
                            FontSize="10"
                            Opacity="0.8"
                            Style="{StaticResource textLabel}"
                            Text="最大值" />
                    </StackPanel>

                    <!--  更新时间  -->
                    <StackPanel Grid.Column="3">
                        <TextBlock
                            FontSize="12"
                            FontWeight="Bold"
                            Style="{StaticResource textLabel}"
                            Text="更新时间" />
                        <TextBlock
                            FontSize="18"
                            FontWeight="SemiBold"
                            Style="{StaticResource textLabel}"
                            Text="{Binding LastUpdated}" />
                        <TextBlock
                            FontSize="10"
                            Opacity="0.8"
                            Style="{StaticResource textLabel}"
                            Text="最后刷新" />
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>
    </StackPanel>
</UserControl>
