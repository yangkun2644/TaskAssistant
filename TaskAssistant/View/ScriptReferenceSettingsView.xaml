<UserControl
    x:Class="TaskAssistant.View.ScriptReferenceSettingsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="600"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <UserControl.Resources>
        <Style
            x:Key="PageTitleStyle"
            BasedOn="{StaticResource textLabel}"
            TargetType="TextBlock">
            <Setter Property="FontSize" Value="24" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Margin" Value="0,0,0,20" />
        </Style>

        <Style
            x:Key="SectionHeaderStyle"
            BasedOn="{StaticResource textLabel}"
            TargetType="TextBlock">
            <Setter Property="FontSize" Value="16" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Margin" Value="0,20,0,10" />
        </Style>

        <Style
            x:Key="DescriptionStyle"
            BasedOn="{StaticResource textLabel}"
            TargetType="TextBlock">
            <Setter Property="FontSize" Value="12" />
            <Setter Property="Opacity" Value="0.8" />
            <Setter Property="Margin" Value="0,0,0,15" />
            <Setter Property="TextWrapping" Value="Wrap" />
        </Style>

        <Style
            x:Key="SettingsTextBox"
            BasedOn="{StaticResource {x:Type TextBox}}"
            TargetType="TextBox">
            <Setter Property="Height" Value="35" />
            <Setter Property="Margin" Value="0,0,10,0" />
        </Style>

        <Style
            x:Key="SmallButton"
            BasedOn="{StaticResource button}"
            TargetType="Button">
            <Setter Property="Height" Value="35" />
            <Setter Property="Padding" Value="15,8" />
            <Setter Property="FontSize" Value="12" />
            <Setter Property="Margin" Value="5,0" />
        </Style>

        <Style
            x:Key="DangerButton"
            BasedOn="{StaticResource SmallButton}"
            TargetType="Button">
            <Setter Property="Background" Value="#8B2635" />
            <Setter Property="BorderBrush" Value="#A64452" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#A64452" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SettingsDataGrid" TargetType="DataGrid">
            <Setter Property="Background" Value="#3F375F" />
            <Setter Property="Foreground" Value="#fcfcfc" />
            <Setter Property="BorderBrush" Value="#504373" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="RowBackground" Value="Transparent" />
            <Setter Property="AlternatingRowBackground" Value="#47416A" />
            <Setter Property="GridLinesVisibility" Value="Horizontal" />
            <Setter Property="HorizontalGridLinesBrush" Value="#504373" />
            <Setter Property="VerticalGridLinesBrush" Value="Transparent" />
            <Setter Property="HeadersVisibility" Value="Column" />
            <Setter Property="AutoGenerateColumns" Value="False" />
            <Setter Property="CanUserAddRows" Value="False" />
            <Setter Property="CanUserDeleteRows" Value="False" />
            <Setter Property="SelectionMode" Value="Single" />
            <Setter Property="RowHeaderWidth" Value="0" />
            <Setter Property="ColumnHeaderHeight" Value="40" />
        </Style>

        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#504373" />
            <Setter Property="Foreground" Value="#fcfcfc" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="BorderBrush" Value="#6b5a96" />
            <Setter Property="BorderThickness" Value="0,0,1,1" />
            <Setter Property="Padding" Value="10,0" />
            <Setter Property="HorizontalContentAlignment" Value="Left" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
        </Style>

        <Style TargetType="DataGridCell">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="Padding" Value="10,5" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#6b5a96" />
                    <Setter Property="Foreground" Value="White" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="#fcfcfc" />
            <Setter Property="Margin" Value="0,10" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
        </Style>

        <Style TargetType="TabControl">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
        </Style>

        <Style TargetType="TabItem">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border
                            Name="Border"
                            Margin="2,0"
                            Background="#3F375F"
                            BorderBrush="#504373"
                            BorderThickness="1,1,1,0"
                            CornerRadius="10,10,0,0">
                            <ContentPresenter
                                x:Name="ContentSite"
                                Margin="15,10"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                ContentSource="Header" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#504373" />
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#47416A" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="#fcfcfc" />
            <Setter Property="FontSize" Value="13" />
        </Style>

        <Style TargetType="ListBox">
            <Setter Property="Background" Value="#3F375F" />
            <Setter Property="Foreground" Value="#fcfcfc" />
            <Setter Property="BorderBrush" Value="#504373" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Disabled" />
            <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto" />
        </Style>

        <Style TargetType="ListBoxItem">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Padding" Value="10" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border Padding="{TemplateBinding Padding}" Background="{TemplateBinding Background}">
                            <ContentPresenter />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#47416A" />
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#6b5a96" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  页面标题  -->
        <StackPanel
            Grid.Row="0"
            Margin="20,20,20,0"
            Orientation="Horizontal">
            <!--<Button
                Margin="0,0,20,0"
                Command="{Binding ReturnCommand}"
                Content="返回"
                Style="{StaticResource button}" />-->
            <TextBlock Style="{StaticResource PageTitleStyle}" Text="脚本引用设置" />
        </StackPanel>

        <!--  主要内容  -->
        <ScrollViewer
            Grid.Row="1"
            Margin="20,0,20,0"
            VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!--  基本设置区域  -->
                <TextBlock Style="{StaticResource SectionHeaderStyle}" Text="基本设置" />
                <TextBlock Style="{StaticResource DescriptionStyle}" Text="配置脚本引用的基本行为，这些设置将影响所有脚本的执行。" />

                <Border Margin="0,0,0,20" Style="{StaticResource border}">
                    <StackPanel>
                        <CheckBox
                            Content="自动加载所有可用程序集"
                            IsChecked="{Binding AutoLoadAllAssemblies}"
                            ToolTip="启用后将自动加载系统中所有可用的.NET程序集，提供最大的兼容性" />

                        <CheckBox
                            Content="启用智能引用建议"
                            IsChecked="{Binding EnableSmartSuggestions}"
                            ToolTip="根据代码内容智能分析并自动加载相关的程序集引用" />
                    </StackPanel>
                </Border>

                <!--  选项卡控件  -->
                <TabControl Margin="0,10,0,20">
                    <!--  程序集引用选项卡  -->
                    <TabItem Header="程序集引用">
                        <StackPanel Margin="0,20,0,0">
                            <TextBlock Style="{StaticResource DescriptionStyle}" Text="管理常用的程序集引用。启用的程序集将在脚本执行时自动加载。" />

                            <!--  添加程序集表单  -->
                            <Border Margin="0,0,0,15" Style="{StaticResource border}">
                                <StackPanel>
                                    <TextBlock
                                        Margin="0,0,0,10"
                                        FontWeight="Bold"
                                        Style="{StaticResource textLabel}"
                                        Text="添加新程序集" />

                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <TextBlock
                                            Grid.Row="0"
                                            Grid.Column="0"
                                            Margin="0,0,10,0"
                                            VerticalAlignment="Center"
                                            Style="{StaticResource textLabel}"
                                            Text="名称：" />
                                        <TextBox
                                            Grid.Row="0"
                                            Grid.Column="1"
                                            Style="{StaticResource SettingsTextBox}"
                                            Text="{Binding NewAssemblyName, UpdateSourceTrigger=PropertyChanged}" />

                                        <TextBlock
                                            Grid.Row="1"
                                            Grid.Column="0"
                                            Margin="0,10,10,0"
                                            VerticalAlignment="Center"
                                            Style="{StaticResource textLabel}"
                                            Text="路径：" />
                                        <TextBox
                                            Grid.Row="1"
                                            Grid.Column="1"
                                            Margin="0,10,10,0"
                                            Style="{StaticResource SettingsTextBox}"
                                            Text="{Binding NewAssemblyPath, UpdateSourceTrigger=PropertyChanged}" />
                                        <StackPanel
                                            Grid.Row="1"
                                            Grid.Column="2"
                                            Margin="0,10,0,0"
                                            Orientation="Horizontal">
                                            <Button
                                                Command="{Binding BrowseAssemblyFileCommand}"
                                                Content="浏览..."
                                                Style="{StaticResource SmallButton}" />
                                            <Button
                                                Command="{Binding AddAssemblyCommand}"
                                                Content="添加"
                                                Style="{StaticResource SmallButton}" />
                                        </StackPanel>

                                        <TextBlock
                                            Grid.Row="2"
                                            Grid.Column="0"
                                            Margin="0,10,10,0"
                                            VerticalAlignment="Top"
                                            Style="{StaticResource textLabel}"
                                            Text="描述：" />
                                        <TextBox
                                            Grid.Row="2"
                                            Grid.Column="1"
                                            Grid.ColumnSpan="2"
                                            Margin="0,10,0,0"
                                            Style="{StaticResource SettingsTextBox}"
                                            Text="{Binding NewAssemblyDescription, UpdateSourceTrigger=PropertyChanged}" />
                                    </Grid>
                                </StackPanel>
                            </Border>

                            <!--  程序集列表  -->
                            <DataGrid
                                Height="250"
                                ItemsSource="{Binding CommonAssemblies}"
                                Style="{StaticResource SettingsDataGrid}">
                                <DataGrid.Columns>
                                    <DataGridCheckBoxColumn
                                        Width="60"
                                        Binding="{Binding IsEnabled}"
                                        Header="启用" />
                                    <DataGridTextColumn
                                        Width="200"
                                        Binding="{Binding Name}"
                                        Header="程序集名称" />
                                    <DataGridTextColumn
                                        Width="300"
                                        Binding="{Binding Path}"
                                        Header="文件路径" />
                                    <DataGridTextColumn
                                        Width="*"
                                        Binding="{Binding Description}"
                                        Header="描述" />
                                    <DataGridTemplateColumn Width="80" Header="操作">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Button
                                                    Click="RemoveAssemblyButton_Click"
                                                    Content="删除"
                                                    Style="{StaticResource DangerButton}"
                                                    Tag="{Binding}" />
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </StackPanel>
                    </TabItem>

                    <!--  NuGet包引用选项卡  -->
                    <TabItem Header="NuGet包引用">
                        <StackPanel Margin="0,20,0,0">
                            <TextBlock Style="{StaticResource DescriptionStyle}" Text="管理常用的NuGet包引用。启用的包将在脚本执行时自动下载和引用。" />

                            <!--  添加NuGet包表单  -->
                            <Border Margin="0,0,0,15" Style="{StaticResource border}">
                                <StackPanel>
                                    <TextBlock
                                        Margin="0,0,0,10"
                                        FontWeight="Bold"
                                        Style="{StaticResource textLabel}"
                                        Text="添加新NuGet包" />

                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100" />
                                            <ColumnDefinition Width="200" />
                                            <ColumnDefinition Width="80" />
                                            <ColumnDefinition Width="150" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <TextBlock
                                            Grid.Row="0"
                                            Grid.Column="0"
                                            Margin="0,0,10,0"
                                            VerticalAlignment="Center"
                                            Style="{StaticResource textLabel}"
                                            Text="包ID：" />
                                        <TextBox
                                            Grid.Row="0"
                                            Grid.Column="1"
                                            Style="{StaticResource SettingsTextBox}"
                                            Text="{Binding NewNuGetPackageId, UpdateSourceTrigger=PropertyChanged}" />

                                        <TextBlock
                                            Grid.Row="0"
                                            Grid.Column="2"
                                            Margin="0,0,10,0"
                                            VerticalAlignment="Center"
                                            Style="{StaticResource textLabel}"
                                            Text="版本：" />
                                        <TextBox
                                            Grid.Row="0"
                                            Grid.Column="3"
                                            Style="{StaticResource SettingsTextBox}"
                                            Text="{Binding NewNuGetVersion, UpdateSourceTrigger=PropertyChanged}" />

                                        <Button
                                            Grid.Row="0"
                                            Grid.Column="4"
                                            Command="{Binding AddNuGetPackageCommand}"
                                            Content="添加"
                                            Style="{StaticResource SmallButton}" />

                                        <TextBlock
                                            Grid.Row="1"
                                            Grid.Column="0"
                                            Margin="0,10,10,0"
                                            VerticalAlignment="Top"
                                            Style="{StaticResource textLabel}"
                                            Text="描述：" />
                                        <TextBox
                                            Grid.Row="1"
                                            Grid.Column="1"
                                            Grid.ColumnSpan="4"
                                            Margin="0,10,0,0"
                                            Style="{StaticResource SettingsTextBox}"
                                            Text="{Binding NewNuGetDescription, UpdateSourceTrigger=PropertyChanged}" />
                                    </Grid>
                                </StackPanel>
                            </Border>

                            <!--  NuGet包列表  -->
                            <DataGrid
                                Height="250"
                                ItemsSource="{Binding CommonNuGetPackages}"
                                Style="{StaticResource SettingsDataGrid}">
                                <DataGrid.Columns>
                                    <DataGridCheckBoxColumn
                                        Width="60"
                                        Binding="{Binding IsEnabled}"
                                        Header="启用" />
                                    <DataGridTextColumn
                                        Width="200"
                                        Binding="{Binding PackageId}"
                                        Header="包ID" />
                                    <DataGridTextColumn
                                        Width="100"
                                        Binding="{Binding Version}"
                                        Header="版本" />
                                    <DataGridCheckBoxColumn
                                        Width="80"
                                        Binding="{Binding PreLoad}"
                                        Header="预加载" />
                                    <DataGridTextColumn
                                        Width="*"
                                        Binding="{Binding Description}"
                                        Header="描述" />
                                    <DataGridTemplateColumn Width="80" Header="操作">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Button
                                                    Click="RemoveNuGetPackageButton_Click"
                                                    Content="删除"
                                                    Style="{StaticResource DangerButton}"
                                                    Tag="{Binding}" />
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </StackPanel>
                    </TabItem>

                    <!--  排除模式选项卡  -->
                    <TabItem Header="排除模式">
                        <StackPanel Margin="0,20,0,0">
                            <TextBlock Style="{StaticResource DescriptionStyle}" Text="配置要排除的程序集文件名模式。支持通配符 * 和 ?。" />

                            <!--  添加排除模式表单  -->
                            <Border Margin="0,0,0,15" Style="{StaticResource border}">
                                <StackPanel>
                                    <TextBlock
                                        Margin="0,0,0,10"
                                        FontWeight="Bold"
                                        Style="{StaticResource textLabel}"
                                        Text="添加排除模式" />

                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <TextBlock
                                            Grid.Column="0"
                                            Margin="0,0,10,0"
                                            VerticalAlignment="Center"
                                            Style="{StaticResource textLabel}"
                                            Text="模式：" />
                                        <TextBox
                                            Grid.Column="1"
                                            Style="{StaticResource SettingsTextBox}"
                                            Text="{Binding NewExcludePattern, UpdateSourceTrigger=PropertyChanged}" />
                                        <Button
                                            Grid.Column="2"
                                            Command="{Binding AddExcludePatternCommand}"
                                            Content="添加"
                                            Style="{StaticResource SmallButton}" />
                                    </Grid>
                                </StackPanel>
                            </Border>

                            <!--  排除模式列表  -->
                            <ListBox Height="200" ItemsSource="{Binding ExcludedAssemblyPatterns}">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="5">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>

                                            <TextBlock
                                                Grid.Column="0"
                                                VerticalAlignment="Center"
                                                FontFamily="Consolas"
                                                Style="{StaticResource textLabel}"
                                                Text="{Binding}" />

                                            <Button
                                                Grid.Column="1"
                                                Margin="10,0,0,0"
                                                Click="RemoveExcludePatternButton_Click"
                                                Content="删除"
                                                Style="{StaticResource DangerButton}"
                                                Tag="{Binding}" />
                                        </Grid>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </StackPanel>
                    </TabItem>
                </TabControl>
            </StackPanel>
        </ScrollViewer>

        <!--  底部按钮  -->
        <StackPanel
            Grid.Row="2"
            Margin="20"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <Button
                Margin="0,0,15,0"
                Command="{Binding ResetToDefaultsCommand}"
                Content="重置为默认"
                Style="{StaticResource sendButton}" />
            <Button
                Margin="0,0,15,0"
                Command="{Binding SaveSettingsCommand}"
                Content="保存设置"
                Style="{StaticResource sendButton}" />
        </StackPanel>

        <!--  加载遮罩  -->
        <Grid
            Grid.Row="0"
            Grid.RowSpan="3"
            Background="#80000000"
            Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
            <Border
                Padding="30"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Background="#3F375F"
                BorderBrush="#504373"
                BorderThickness="1"
                CornerRadius="15">
                <StackPanel Orientation="Horizontal">
                    <TextBlock
                        VerticalAlignment="Center"
                        FontSize="14"
                        Style="{StaticResource textLabel}"
                        Text="正在处理，请稍候..." />
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>