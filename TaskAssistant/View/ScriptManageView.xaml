<UserControl
    x:Class="TaskAssistant.View.ScriptManageView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:avalonedit="http://icsharpcode.net/sharpdevelop/avalonedit"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TaskAssistant.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <UserControl.Resources>
        <!--  必填字段标签样式  -->
        <Style x:Key="RequiredTextLabel" TargetType="StackPanel">
            <Setter Property="Orientation" Value="Horizontal" />
            <Setter Property="Margin" Value="0,15,0,5" />
        </Style>

        <!--  带验证的文本框样式  -->
        <Style
            x:Key="TextBoxWithValidation"
            BasedOn="{StaticResource {x:Type TextBox}}"
            TargetType="TextBox">
            <Style.Triggers>
                <Trigger Property="Text" Value="">
                    <Setter Property="BorderBrush" Value="#FF6B6B" />
                    <Setter Property="BorderThickness" Value="1" />
                </Trigger>
                <Trigger Property="Text" Value="{x:Null}">
                    <Setter Property="BorderBrush" Value="#FF6B6B" />
                    <Setter Property="BorderThickness" Value="1" />
                </Trigger>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#7985FF" />
                    <Setter Property="BorderThickness" Value="2" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <!--  改进的禁用状态按钮样式  -->
        <Style
            x:Key="ConditionalSendButton"
            BasedOn="{StaticResource sendButton}"
            TargetType="Button">
            <Style.Triggers>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.4" />
                    <Setter Property="Cursor" Value="No" />
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Border
                                    Padding="20,0,20,0"
                                    Background="#555555"
                                    BorderThickness="0"
                                    CornerRadius="20">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!--  错误提示文本样式  -->
        <Style x:Key="ErrorHintText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="11" />
            <Setter Property="Foreground" Value="#FF6B6B" />
            <Setter Property="Margin" Value="5,2,0,8" />
            <Setter Property="FontWeight" Value="SemiBold" />
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="90" />
            <RowDefinition Height="*" />
            <RowDefinition Height="80" />
        </Grid.RowDefinitions>

        <!--  标题栏  -->
        <Separator
            Grid.Row="1"
            VerticalAlignment="Top"
            Background="#e0e0e0"
            Opacity="0.5" />
        <TextBlock
            Margin="40,0,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            FontSize="25"
            FontWeight="Bold"
            Foreground="White"
            Text="{Binding PageTitle}" />
        <StackPanel
            Grid.Row="0"
            Margin="20"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <Button
                Height="50"
                Margin="0,0,0,0"
                Command="{Binding ReturnCommand}"
                Style="{StaticResource sendButton}">
                <StackPanel Orientation="Horizontal">
                    <TextBlock
                        FontFamily="/Assets/Fonts/#Material Symbols Rounded"
                        FontSize="20"
                        Foreground="White"
                        Text="&#xe5e0;" />
                    <TextBlock
                        Margin="8,0,0,0"
                        VerticalAlignment="Center"
                        FontSize="14"
                        Text="返回" />
                </StackPanel>
            </Button>
        </StackPanel>

        <!--  主内容区域  -->
        <ScrollViewer
            Grid.Row="1"
            Margin="20,10,20,20"
            FocusVisualStyle="{x:Null}"
            HorizontalScrollBarVisibility="Hidden"
            VerticalScrollBarVisibility="Hidden">
            <StackPanel>
                <!--  必填字段说明  -->
                <Border
                    Margin="0,0,0,0"
                    Padding="15,10"
                    Background="#2A2551"
                    CornerRadius="8">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock
                            VerticalAlignment="Center"
                            FontFamily="/Assets/Fonts/#Material Symbols Rounded"
                            FontSize="16"
                            Foreground="#FFD93D"
                            Text="&#xe8fd;" />
                        <TextBlock
                            Margin="8,0,0,0"
                            VerticalAlignment="Center"
                            FontSize="12"
                            Foreground="#e0e0e0"
                            Text="标有" />
                        <TextBlock
                            VerticalAlignment="Center"
                            FontSize="12"
                            FontWeight="Bold"
                            Foreground="#FF6B6B"
                            Text=" * " />
                        <TextBlock
                            VerticalAlignment="Center"
                            FontSize="12"
                            Foreground="#e0e0e0"
                            Text="的字段为必填项" />
                    </StackPanel>
                </Border>

                <!--  脚本名称 - 必填  -->
                <StackPanel Style="{StaticResource RequiredTextLabel}">
                    <TextBlock Style="{StaticResource textLabel}" Text="脚本名称" />
                    <TextBlock
                        Margin="5,0,0,0"
                        FontWeight="Bold"
                        Foreground="#FF6B6B"
                        Text="*" />
                </StackPanel>
                <TextBox
                    x:Name="ScriptNameTextBox"
                    Margin="0,0,0,3"
                    Style="{StaticResource TextBoxWithValidation}"
                    Text="{Binding ScriptName, UpdateSourceTrigger=PropertyChanged}" />
                <TextBlock
                    x:Name="ScriptNameHint"
                    Style="{StaticResource ErrorHintText}"
                    Text="⚠ 请输入脚本名称"
                    Visibility="{Binding ScriptNameHintVisibility}" />

                <!--  描述 - 可选  -->
                <StackPanel Style="{StaticResource RequiredTextLabel}">
                    <TextBlock Style="{StaticResource textLabel}" Text="脚本描述" />
                    <TextBlock
                        Margin="5,0,0,0"
                        FontSize="11"
                        Foreground="#80e0e0e0"
                        Text="(可选)" />
                </StackPanel>
                <TextBox Margin="0,0,0,15" Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}" />

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <StackPanel Style="{StaticResource RequiredTextLabel}">
                        <TextBlock Style="{StaticResource textLabel}" Text="版本号" />
                        <TextBlock
                            Margin="5,0,0,0"
                            FontSize="11"
                            Foreground="#80e0e0e0"
                            Text="(可选)" />
                    </StackPanel>
                    <TextBox
                        Grid.Row="1"
                        Margin="0,0,10,20"
                        Text="{Binding Version, UpdateSourceTrigger=PropertyChanged}" />

                    <StackPanel Grid.Column="1" Style="{StaticResource RequiredTextLabel}">
                        <TextBlock Style="{StaticResource textLabel}" Text="作者" />
                        <TextBlock
                            Margin="5,0,0,0"
                            FontSize="11"
                            Foreground="#80e0e0e0"
                            Text="(可选)" />
                    </StackPanel>
                    <TextBox
                        Grid.Row="1"
                        Grid.Column="1"
                        Margin="10,0,0,20"
                        Text="{Binding Author, UpdateSourceTrigger=PropertyChanged}" />
                </Grid>

                <!--  脚本代码 - 必填  -->
                <StackPanel Style="{StaticResource RequiredTextLabel}">
                    <TextBlock Style="{StaticResource textLabel}" Text="脚本代码" />
                    <TextBlock
                        Margin="5,0,0,0"
                        FontWeight="Bold"
                        Foreground="#FF6B6B"
                        Text="*" />
                </StackPanel>

                <StackPanel Margin="0,0,0,10" Orientation="Horizontal">
                    <TextBlock
                        Margin="0,0,10,0"
                        VerticalAlignment="Center"
                        Style="{StaticResource textLabel}"
                        Text="选择模板：" />
                    <ComboBox
                        x:Name="TemplateComboBox"
                        Width="200"
                        Height="40"
                        ItemsSource="{Binding ScriptTemplates}"
                        SelectedItem="{Binding SelectedTemplate, Mode=TwoWay}"
                        SelectionChanged="TemplateComboBox_SelectionChanged" />
                    <Button
                        Width="150"
                        Height="40"
                        Margin="20,0,0,0"
                        Command="{Binding OpenFullScreenEditorCommand}"
                        Style="{StaticResource sendButton}"
                        ToolTip="在全屏编辑器中编辑代码">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock
                                FontFamily="/Assets/Fonts/#Material Symbols Rounded"
                                FontSize="20"
                                Foreground="White"
                                Text="&#xe89e;" />
                            <TextBlock
                                Margin="8,0,0,0"
                                VerticalAlignment="Center"
                                FontSize="14"
                                FontWeight="SemiBold"
                                Text="全屏编辑" />
                        </StackPanel>
                    </Button>
                </StackPanel>


                <avalonedit:TextEditor
                    Name="CodeEditor"
                    Width="740"
                    Height="150"
                    FontFamily="Consolas"
                    FontSize="14"
                    HorizontalScrollBarVisibility="Auto"
                    ShowLineNumbers="True"
                    SyntaxHighlighting="C#"
                    VerticalScrollBarVisibility="Auto"
                    WordWrap="True" />


                <TextBlock
                    x:Name="CodeHint"
                    Style="{StaticResource ErrorHintText}"
                    Text="⚠ 请输入脚本代码"
                    Visibility="{Binding CodeHintVisibility}" />

                <TextBlock
                    Margin="0,20,0,0"
                    FontSize="11"
                    Foreground="#e0e0e0"
                    Opacity="0.7"
                    Text="⚠ 警告：在保存脚本前请确认脚本是可信的，您需要按照帮助文档中的说明进行编写。错误的脚本可能会造成不可逆的影响。"
                    TextAlignment="Center"
                    TextWrapping="Wrap" />


            </StackPanel>
        </ScrollViewer>
        
        <StackPanel
            Grid.Row="3"
            Margin="0,0,0,0"
            HorizontalAlignment="Center"
            Orientation="Horizontal">
            <Button
                Width="300"
                Margin="10"
                Command="{Binding ExecuteScriptCommand}"
                Style="{StaticResource ConditionalSendButton}"
                ToolTip="{Binding ExecuteButtonTooltip}">
                <StackPanel Orientation="Horizontal">
                    <TextBlock
                        FontFamily="/Assets/Fonts/#Material Symbols Rounded"
                        FontSize="20"
                        Foreground="White"
                        Text="&#xeb8e;" />
                    <TextBlock
                        Margin="8,0,0,0"
                        VerticalAlignment="Center"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Text="执行脚本" />
                </StackPanel>
            </Button>
            <Button
                Width="300"
                Margin="10"
                Command="{Binding SaveScriptCommand}"
                Style="{StaticResource ConditionalSendButton}"
                ToolTip="{Binding SaveButtonTooltip}">
                <StackPanel Orientation="Horizontal">
                    <TextBlock
                        FontFamily="/Assets/Fonts/#Material Symbols Rounded"
                        FontSize="20"
                        Foreground="White"
                        Text="&#xef42;" />
                    <TextBlock
                        Margin="8,0,0,0"
                        VerticalAlignment="Center"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Text="保存脚本" />
                </StackPanel>
            </Button>
        </StackPanel>
    </Grid>
</UserControl>
