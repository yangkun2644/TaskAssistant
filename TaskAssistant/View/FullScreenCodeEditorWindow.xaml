<Window
    x:Class="TaskAssistant.View.FullScreenCodeEditorWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:avalonedit="http://icsharpcode.net/sharpdevelop/avalonedit"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="脚本编辑器"
    Width="1200"
    Height="850"
    AllowsTransparency="True"
    Background="Transparent"
    ResizeMode="CanResize"
    ShowInTaskbar="True"
    WindowStartupLocation="CenterOwner"
    WindowStyle="None"
    mc:Ignorable="d">
    <Border
        Padding="0"
        BorderThickness="1"
        CornerRadius="14">
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Offset="-0.2" Color="#D489FF" />
                <GradientStop Offset="0.5" Color="#FF4751B7" />
            </LinearGradientBrush>
        </Border.Background>
        <Border.Effect>
            <DropShadowEffect
                BlurRadius="20"
                Direction="270"
                Opacity="0.3"
                ShadowDepth="5"
                Color="Black" />
        </Border.Effect>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="80" />
                <RowDefinition Height="*" />
                <RowDefinition Height="70" />
            </Grid.RowDefinitions>

            <!--  工具栏  -->
            <Border Grid.Row="0" BorderThickness="0,0,0,1">
                <Grid Margin="20,10">
                    <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                        <TextBlock
                            VerticalAlignment="Center"
                            FontSize="18"
                            FontWeight="Bold"
                            Foreground="White"
                            Text="脚本编辑器" />
                    </StackPanel>

                    <StackPanel
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Orientation="Horizontal">
                        <Button
                            Width="150"
                            Height="40"
                            Margin="0,0,10,0"
                            Click="IncreaseFontSize_Click"
                            Style="{StaticResource sendButton}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock
                                    Margin="8,0,0,0"
                                    VerticalAlignment="Center"
                                    Text="字体大小" />
                                <TextBlock
                                    FontFamily="/Assets/Fonts/#Material Symbols Rounded"
                                    FontSize="20"
                                    Foreground="White"
                                    Text="&#xe145;" />
                            </StackPanel>
                        </Button>
                        <Button
                            Width="150"
                            Height="40"
                            Margin="0,0,10,0"
                            Click="DecreaseFontSize_Click"
                            Style="{StaticResource sendButton}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock
                                    Margin="8,0,0,0"
                                    VerticalAlignment="Center"
                                    Text="字体大小" />
                                <TextBlock
                                    FontFamily="/Assets/Fonts/#Material Symbols Rounded"
                                    FontSize="20"
                                    Foreground="White"
                                    Text="&#xe15b;" />
                            </StackPanel>
                        </Button>
                        <Button
                            Width="150"
                            Height="40"
                            Margin="0,0,10,0"
                            Click="ToggleWordWrap_Click"
                            Style="{StaticResource sendButton}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock
                                    FontFamily="/Assets/Fonts/#Material Symbols Rounded"
                                    FontSize="20"
                                    Foreground="White"
                                    Text="&#xe5da;" />
                                <TextBlock
                                    Margin="8,0,0,0"
                                    VerticalAlignment="Center"
                                    Text="自动换行" />
                            </StackPanel>
                        </Button>

                    </StackPanel>
                </Grid>
            </Border>

            <!--  代码编辑器  -->
            <avalonedit:TextEditor
                x:Name="CodeEditor"
                Grid.Row="1"
                FontFamily="Consolas"
                FontSize="14"
                HorizontalScrollBarVisibility="Auto"
                ShowLineNumbers="True"
                SyntaxHighlighting="C#"
                VerticalScrollBarVisibility="Auto"
                WordWrap="True">
                <avalonedit:TextEditor.BorderBrush>
                    <SolidColorBrush Color="#e0e0e0" />
                </avalonedit:TextEditor.BorderBrush>
                <avalonedit:TextEditor.BorderThickness>1</avalonedit:TextEditor.BorderThickness>
                <avalonedit:TextEditor.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="14" />
                    </Style>
                </avalonedit:TextEditor.Resources>
            </avalonedit:TextEditor>

            <!--  底部操作栏  -->
            <Border Grid.Row="2" BorderThickness="0,1,0,0">
                <StackPanel
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
                    <Button
                        Width="150"
                        Height="40"
                        Margin="0,0,10,0"
                        Click="SaveButton_Click"
                        Style="{StaticResource sendButton}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock
                                FontFamily="/Assets/Fonts/#Material Symbols Rounded"
                                FontSize="20"
                                Foreground="White"
                                Text="&#xef42;" />
                            <TextBlock
                                Margin="8,0,0,0"
                                VerticalAlignment="Center"
                                Text="保存并返回" />
                        </StackPanel>
                    </Button>
                    <Button
                        Width="120"
                        Height="40"
                        Margin="10,0,0,0"
                        Click="CancelButton_Click"
                        Style="{StaticResource sendButton}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock
                                FontFamily="/Assets/Fonts/#Material Symbols Rounded"
                                FontSize="20"
                                Foreground="White"
                                Text="&#xe5c9;" />
                            <TextBlock
                                Margin="8,0,0,0"
                                VerticalAlignment="Center"
                                Text="取消" />
                        </StackPanel>
                    </Button>

                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>