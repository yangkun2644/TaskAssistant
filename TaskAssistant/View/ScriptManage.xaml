<UserControl
    x:Class="TaskAssistant.View.ScriptManage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TaskAssistant.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <UserControl.Resources>
        <!--  脚本项目样式  -->
        <Style x:Key="ScriptItemStyle" TargetType="Border">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Offset="-0.2" Color="#D489FF" />
                        <GradientStop Offset="0.5" Color="#7985FF" />
                        <GradientStop Offset="1" Color="#6AD8FD" />
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="CornerRadius" Value="15" />
            <Setter Property="Margin" Value="10,5" />
            <Setter Property="Padding" Value="15" />
            <Setter Property="MinHeight" Value="120" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect
                                BlurRadius="10"
                                Direction="270"
                                Opacity="0.3"
                                ShadowDepth="5"
                                Color="#000000" />
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!--  操作按钮样式  -->
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#4A4A4A" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Width" Value="35" />
            <Setter Property="Height" Value="35" />
            <Setter Property="Margin" Value="5,0" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#6A6A6A" />
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#2A2A2A" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <!--  搜索框样式  -->
        <Style
            x:Key="SearchBoxStyle"
            BasedOn="{StaticResource {x:Type TextBox}}"
            TargetType="TextBox">
            <Setter Property="Height" Value="40" />
            <Setter Property="Padding" Value="15,10" />
            <Setter Property="FontSize" Value="14" />
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="90" />
            <RowDefinition Height="60" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  标题栏  -->
        <Grid Grid.Row="0">
            <Separator
                VerticalAlignment="Bottom"
                Background="#e0e0e0"
                Opacity="0.5" />
            <TextBlock
                Margin="40,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                FontSize="25"
                FontWeight="Bold"
                Foreground="White"
                Text="{Binding Title}" />
            <StackPanel
                Margin="20"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <Button
                    Height="50"
                    Margin="10,0,0,0"
                    Command="{Binding CreateScriptCommand}"
                    Style="{StaticResource sendButton}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock
                            FontFamily="/Assets/Fonts/#Material Symbols Rounded"
                            FontSize="20"
                            Foreground="White"
                            Text="&#xe145;" />
                        <TextBlock
                            Margin="8,0,0,0"
                            VerticalAlignment="Center"
                            FontSize="14"
                            Text="添加脚本" />
                    </StackPanel>
                </Button>
                <Button
                    Height="50"
                    Margin="10,0,0,0"
                    Command="{Binding RefreshCommand}"
                    Style="{StaticResource sendButton}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock
                            FontFamily="/Assets/Fonts/#Material Symbols Rounded"
                            FontSize="20"
                            Foreground="White"
                            Text="&#xe5d5;" />
                        <TextBlock
                            Margin="8,0,0,0"
                            VerticalAlignment="Center"
                            FontSize="14"
                            Text="刷新" />
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>

        <!--  搜索和筛选栏  -->
        <Grid Grid.Row="1" Margin="20,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="200" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!--  搜索框  -->
            <Grid Grid.Column="0" Margin="0,0,10,0">
                <TextBox
                    Height="40"
                    Padding="15,10"
                    FontSize="14"
                    Style="{StaticResource {x:Type TextBox}}"
                    Text="{Binding SearchKeyword, UpdateSourceTrigger=PropertyChanged}">
                    <TextBox.InputBindings>
                        <KeyBinding Key="Enter" Command="{Binding SearchCommand}" />
                    </TextBox.InputBindings>
                </TextBox>
                <!--  占位符文本  -->
                <TextBlock
                    Margin="18,0,0,0"
                    VerticalAlignment="Center"
                    FontSize="14"
                    Foreground="#A0A0A0"
                    IsHitTestVisible="False"
                    Text="{Binding SearchPlaceholder}">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Visibility" Value="Collapsed" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding SearchKeyword}" Value="">
                                    <Setter Property="Visibility" Value="Visible" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding SearchKeyword}" Value="{x:Null}">
                                    <Setter Property="Visibility" Value="Visible" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </Grid>

            <!--  分类筛选  -->
            <ComboBox
                Grid.Column="1"
                Height="40"
                Margin="0,0,10,0"
                ItemsSource="{Binding Categories}"
                SelectedItem="{Binding SelectedCategory}"
                Style="{StaticResource {x:Type ComboBox}}" />

            <!--  搜索按钮  -->
            <Button
                Grid.Column="2"
                Width="100"
                Height="40"
                Margin="0,0,10,0"
                Command="{Binding SearchCommand}"
                Style="{StaticResource sendButton}">
                <StackPanel Orientation="Horizontal">
                    <TextBlock
                        FontFamily="/Assets/Fonts/#Material Symbols Rounded"
                        FontSize="16"
                        Foreground="White"
                        Text="&#xe8b6;" />
                    <TextBlock
                        Margin="5,0,0,0"
                        VerticalAlignment="Center"
                        FontSize="12"
                        Text="搜索" />
                </StackPanel>
            </Button>

            <!--  脚本数量显示  -->
            <Border
                Grid.Column="3"
                Height="40"
                Padding="15,0"
                Background="#2A2551"
                CornerRadius="8">
                <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                    <TextBlock
                        FontSize="12"
                        Foreground="#C0C0C0"
                        Text="共 " />
                    <TextBlock
                        FontSize="12"
                        FontWeight="Bold"
                        Foreground="White"
                        Text="{Binding DisplayedScriptsCount}" />
                    <TextBlock
                        FontSize="12"
                        Foreground="#C0C0C0"
                        Text=" 个脚本" />
                </StackPanel>
            </Border>
        </Grid>

        <!--  脚本列表区域  -->
        <ScrollViewer
            Grid.Row="2"
            Margin="20,0,20,20"
            VerticalScrollBarVisibility="Auto">
            <Grid>
                <!--  加载指示器  -->
                <Border
                    Padding="20"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Background="#2A2551"
                    CornerRadius="10">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="Visibility" Value="Collapsed" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsLoading}" Value="True">
                                    <Setter Property="Visibility" Value="Visible" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock
                            FontFamily="/Assets/Fonts/#Material Symbols Rounded"
                            FontSize="20"
                            Foreground="White"
                            Text="&#xe86a;" />
                        <TextBlock
                            Margin="10,0,0,0"
                            VerticalAlignment="Center"
                            FontSize="14"
                            Foreground="White"
                            Text="正在加载..." />
                    </StackPanel>
                </Border>

                <!--  空状态显示  -->
                <Border
                    Padding="30"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Background="#2A2551"
                    CornerRadius="15">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="Visibility" Value="Collapsed" />
                            <Style.Triggers>
                                <MultiDataTrigger>
                                    <MultiDataTrigger.Conditions>
                                        <Condition Binding="{Binding IsLoading}" Value="False" />
                                        <Condition Binding="{Binding Scripts.Count}" Value="0" />
                                    </MultiDataTrigger.Conditions>
                                    <Setter Property="Visibility" Value="Visible" />
                                </MultiDataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock
                            FontFamily="/Assets/Fonts/#Material Symbols Rounded"
                            FontSize="60"
                            Foreground="#7985FF"
                            Opacity="0.6"
                            Text="&#xf5d0;"
                            TextAlignment="Center" />
                        <TextBlock
                            Margin="0,10,0,0"
                            FontSize="18"
                            FontWeight="Bold"
                            Foreground="White"
                            Text="暂无脚本"
                            TextAlignment="Center" />
                        <TextBlock
                            Margin="0,5,0,15"
                            FontSize="14"
                            Foreground="#B0B0B0"
                            Text="点击上方&#x201C;添加脚本&#x201D;按钮开始创建您的第一个脚本"
                            TextAlignment="Center" />
                        <Button Command="{Binding CreateScriptCommand}" Style="{StaticResource sendButton}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock
                                    FontFamily="/Assets/Fonts/#Material Symbols Rounded"
                                    FontSize="16"
                                    Foreground="White"
                                    Text="&#xe145;" />
                                <TextBlock
                                    Margin="8,0,0,0"
                                    VerticalAlignment="Center"
                                    FontSize="14"
                                    Text="创建脚本" />
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Border>

                <!--  脚本列表  -->
                <ItemsControl ItemsSource="{Binding Scripts}">
                    <ItemsControl.Style>
                        <Style TargetType="ItemsControl">
                            <Setter Property="Visibility" Value="Visible" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsLoading}" Value="True">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Scripts.Count}" Value="0">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ItemsControl.Style>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Style="{StaticResource ScriptItemStyle}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <!--  脚本图标  -->
                                    <Border
                                        Grid.Column="0"
                                        Margin="0,0,15,0"
                                        CornerRadius="12">
                                        <TextBlock
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            FontFamily="/Assets/Fonts/#Material Symbols Rounded"
                                            FontSize="70"
                                            Foreground="White"
                                            Text="&#xf5d0;" />
                                    </Border>

                                    <!--  脚本信息  -->
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <TextBlock
                                            FontSize="18"
                                            FontWeight="Bold"
                                            Foreground="White"
                                            Text="{Binding Name}" />
                                        <TextBlock
                                            Margin="0,3,0,5"
                                            FontSize="12"
                                            Foreground="#E0E0E0"
                                            Opacity="0.8"
                                            Text="{Binding Description}"
                                            TextTrimming="CharacterEllipsis" />

                                        <!--  如果描述为空，显示代码预览  -->
                                        <TextBlock
                                            MaxHeight="30"
                                            Margin="0,3,0,5"
                                            FontFamily="Consolas"
                                            FontSize="11"
                                            Foreground="#D0D0D0"
                                            Opacity="0.7"
                                            TextTrimming="CharacterEllipsis"
                                            TextWrapping="NoWrap">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Visibility" Value="Collapsed" />
                                                    <Setter Property="Text" Value="{Binding Code}" />
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Description}" Value="">
                                                            <Setter Property="Visibility" Value="Visible" />
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Description}" Value="{x:Null}">
                                                            <Setter Property="Visibility" Value="Visible" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>

                                        <StackPanel Orientation="Horizontal">
                                            <Border
                                                Padding="6,2"
                                                Background="#CC6CE7"
                                                CornerRadius="4">
                                                <TextBlock
                                                    FontSize="10"
                                                    Foreground="White"
                                                    Text="{Binding Category}" />
                                            </Border>
                                            <Border
                                                Margin="8,0,0,0"
                                                Padding="6,2"
                                                Background="#5DE2E7"
                                                CornerRadius="4">
                                                <TextBlock
                                                    FontSize="10"
                                                    Foreground="White"
                                                    Text="{Binding Version}" />
                                            </Border>
                                            <!--  作者信息  -->
                                            <Border
                                                Margin="8,0,0,0"
                                                Padding="6,2"
                                                Background="#ffffff15"
                                                CornerRadius="4">
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Author}" Value="">
                                                                <Setter Property="Visibility" Value="Collapsed" />
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Author}" Value="{x:Null}">
                                                                <Setter Property="Visibility" Value="Collapsed" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock
                                                        FontSize="10"
                                                        Foreground="White"
                                                        Opacity="0.7"
                                                        Text="作者: " />
                                                    <TextBlock
                                                        FontSize="10"
                                                        Foreground="White"
                                                        Text="{Binding Author}" />
                                                </StackPanel>
                                            </Border>
                                        </StackPanel>
                                        <StackPanel Margin="0,5,0,0" Orientation="Horizontal">
                                            <TextBlock
                                                FontSize="11"
                                                Foreground="#C0C0C0"
                                                Text="创建时间: " />
                                            <TextBlock
                                                FontSize="11"
                                                Foreground="#C0C0C0"
                                                Text="{Binding CreatedAt, StringFormat='yyyy年MM月dd日 HH:mm'}" />
                                            <TextBlock
                                                Margin="15,0,0,0"
                                                FontSize="11"
                                                Foreground="#C0C0C0"
                                                Text="执行次数: " />
                                            <TextBlock
                                                FontSize="11"
                                                Foreground="#C0C0C0"
                                                Text="{Binding ExecutionCount}" />
                                            <!--  最后执行时间  -->
                                            <StackPanel Margin="15,0,0,0" Orientation="Horizontal">
                                                <StackPanel.Style>
                                                    <Style TargetType="StackPanel">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding LastExecuted}" Value="{x:Null}">
                                                                <Setter Property="Visibility" Value="Collapsed" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </StackPanel.Style>
                                                <TextBlock
                                                    FontSize="11"
                                                    Foreground="#C0C0C0"
                                                    Text="最后执行: " />
                                                <TextBlock
                                                    FontSize="11"
                                                    Foreground="#C0C0C0"
                                                    Text="{Binding LastExecuted, StringFormat='MM月dd日 HH:mm'}" />
                                            </StackPanel>
                                        </StackPanel>
                                    </StackPanel>

                                    <!--  操作按钮  -->
                                    <StackPanel
                                        Grid.Column="2"
                                        VerticalAlignment="Top"
                                        Orientation="Horizontal">
                                        <Button
                                            Command="{Binding DataContext.EditScriptCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}"
                                            Style="{StaticResource ActionButtonStyle}"
                                            ToolTip="编辑脚本">
                                            <TextBlock
                                                FontFamily="/Assets/Fonts/#Material Symbols Rounded"
                                                FontSize="16"
                                                Foreground="White"
                                                Text="&#xe3c9;" />
                                        </Button>
                                        <Button
                                            Command="{Binding DataContext.DeleteScriptCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}"
                                            Style="{StaticResource ActionButtonStyle}"
                                            ToolTip="删除脚本">
                                            <TextBlock
                                                FontFamily="/Assets/Fonts/#Material Symbols Rounded"
                                                FontSize="16"
                                                Foreground="White"
                                                Text="&#xe872;" />
                                        </Button>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>
        </ScrollViewer>
    </Grid>
</UserControl>
